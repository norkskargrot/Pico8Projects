function _init()
	p={}
	p.x,p.y=64,64
	p.dx,p.dy=0,0
end

function _update()
	local a,f=1,0.6
	if (btn(0)) p.dx-=a
	if (btn(1)) p.dx+=a
	if (btn(2)) p.dy-=a
	if (btn(3)) p.dy+=a
	p.dx*=f
	p.dy*=f
	p.x+=p.dx
	p.y+=p.dy
end

function _draw()
	cls()
	circfill(p.x,p.y,2,7)
end
