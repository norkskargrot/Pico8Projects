pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
col={7,6,13,5,1}
o={}
function _init()
	for i=0,500 do
		k={}
		k.y=rnd(127)
		k.x=rnd(64)
		k.off=rnd(0.5)+0.05
		add(o,k)
	end
end

function _draw()
	cls()
	
	for k,v in pairs(o) do
		local off=time()*v.off+v.x
		pset(
			64+v.x*sin(off),
			v.y-0.01*v.x*(v.y-64)*cos(off),
			col[ceil(#col*(cos(off)+1)/2)]
		)
	end
end
