pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
vpointy=-128
vpointx=64

function _update()
	if (btn(2)) vpointy-=1
	if (btn(3)) vpointy+=1
end

function _draw()
	cls(7)
	for i=-64,128+64,16 do
		line(i,128,vpointx,vpointy,0)
	end
	for i=0,10 do
		local y=128-i/2
		line(0,y,128,y,0)
	end
end
