pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
p={}

for i=0,300 do
	add(p,{
		x=rnd(127),
		y=rnd(127),
		dy=rnd(1),
		r=rnd(10),
	})
end

function _draw()
	cls(7)
	for k,v in pairs(p) do
		--v.x+=rnd(1)-0.5
		v.y-=v.dy
		v.dy+=rnd(0.2)-0.1
		v.dy=max(v.dy,0.4)
		if v.y<-10 then
			v.y=137
		end
		circfill(v.x,v.y,v.r,0)
	end
	for k,v in pairs(p) do
		circfill(v.x,v.y,v.r-1,7)
	end
end
