pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
--draw
//fill pattern gradient
shades={
 0b0000000000000000,
 0b1000000000000000,
 0b1000000000100000,
 0b1010000000100000,
 0b1010000010100000,
 0b1010010010100000,
 0b1010010010100001,
 0b1010010110100001,
 0b1010010110100101,
 0b1110010110100101,
 0b1110010110110101,
 0b1111010110110101,
 0b1111010111110101,
 0b1111110111110101,
 0b1111110111110111,
 0b1111111111110111,
 0b1111111111111111
}

cols= {
	--water
	{12,13,1,1,0},
	--sand
	{10,9,4,2,0},
	--grass
	{11,3,15,1,0},
	--stone
	{6,13,5,14,0},
	--snow
	{7,6,13,5,0}
}

function _init()
	pal(15,131,1)
	pal(14,128,1)
	pal(8,133,1)
	pal(11,139,1)
	pal(10,135,1)
end

function _draw()
	cls()
	for y=1,5 do
		for i=0,127 do
			local val=flr(i/2)
			local cindex=flr(val/16)+1
			local col1=cols[y][cindex]
			local col2=cols[y][cindex+1]
			local col=col1|col2<<4
			local findex=flr(val%16+1)
			fillp(shades[findex])
			local h=128/5
			rectfill(i+1,(y-1)*h,i+1,y*h,col)
		end
	end
end

