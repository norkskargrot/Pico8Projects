__lua__
function _init()
	x=0
	y=0
	lb={true,true,true,true}
end

function _update()
	if (mvaxis(0)) x-=1
	if (mvaxis(1)) x+=1
	if (mvaxis(2)) y-=1
	if (mvaxis(3)) y+=1
end

function mvaxis(i)
	if btn(i) then
		if (lb[i]) lb[i]=false return true
	elseif not lb[i] then
		lb[i]=true
	end
	return false
end

function _draw()
	cls()
	--for i=1,15 do pal(i,11) end
	map(x,y,0,0,16,16)
	palt(0,false)
	spr(1,56,56)
	pal()
end
